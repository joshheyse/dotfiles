###############################################################################
# .profile is read by many shells in the absence of their own shell-specific config files.
###############################################################################
# shellcheck shell=bash

if [ -n "$SHELL" ]; then
  SHELLNAME=${SHELL//*\//}
  export SHELLNAME
else
  SHELLNAME=$(ps -o comm= -c "$$" | sed 's/-//')
  export SHELLNAME
fi


